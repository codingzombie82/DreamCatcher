<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DreamListActivity">
    <TextView
        android:id="@+id/tvDreamListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="@string/favorite_month"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.changzakso.dreamcatcher.view.GridRecyclerView
        android:id="@+id/cDreamListView"
        android:layout_below="@id/tvDreamListTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="@dimen/activity_horizontal_margin" />
</RelativeLayout>